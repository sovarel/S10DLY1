  else if проверка = 'Выключить пк' then
  begin
  write ('ВЫКЛЮЧАЮ');
  Exec('shutdown.exe', '-s -t 0 -f');
  end
  else if проверка = 'выключить пк' then
  begin
  write ('ВЫКЛЮЧАЮ');
  Exec('shutdown.exe', '-s -t 0 -f');
  end
  else if проверка = 'выкл пк' then
  begin
  write ('ВЫКЛЮЧАЮ');
  Exec('shutdown.exe', '-s -t 0 -f');
  end
  else if проверка = 'Выкл пк' then
  begin
  write ('ВЫКЛЮЧАЮ');
  Exec('shutdown.exe', '-s -t 0 -f');
  end
  else if проверка = 'Пк выкл' then
  begin
  write ('ВЫКЛЮЧАЮ');
  Exec('shutdown.exe', '-s -t 0 -f');
  end
  else if проверка = 'пк выкл' then
  begin
  write ('ВЫКЛЮЧАЮ');
  Exec('shutdown.exe', '-s -t 0 -f');
  end
  else if проверка = 'История' then //История
  begin
  if история >= 1 then
  begin
  textbackground (WHITE);
  clrscr;
  textcolor (BLUE);
  println ('ПЕРВАЯ ГЛАВА');
  textcolor (BLACK);
  println ('Аджай родился в Кирате в 1988 году. Его родители Ишвари Гейл и Мохан Гейл.');
  println ('Его отец лидер повстанцев, во время гражданской войны, суть которой заключалась в том что бы свергнуть самопровозглашённого короля Пэйгана Мина.');
  println ('Через два года после рождения Аджая. Мохан был убит, после чего Ишвари вместе с ним забежала в США. Там она вырастила Аджая как Американца. Она нечего не рассказывала ему о произошедшем в Карате.');
  println ('');
  println ('');
  println ('Перед своей смертью Ишвари назвала своё последнее желание.');
  println ('«Аджай сын мой» я многого тебе не рассказала. Но времени больше нет. Отнеси мой прах к Лакшмане. Она не рассказала о том что это или кто. Видимо Аджай должен будет обо всём узнать в будущем спустя какое-то время.');
  println ('');
  end;
  end;

  
  
 until пуск = 'Выключен' ;
 

end.
